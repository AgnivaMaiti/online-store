# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,json,css,scss,md}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.{cmd,ps1,bat}]
end_of_line = crlf

# Minified files
[*.min.{js,css}]
insert_final_newline = false

# Package files
[package.json]
indent_size = 2

# Lock files
[package-lock.json]
indent_size = 2

# Docker files
[Dockerfile]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Makefiles use real tabs
[Makefile]
indent_style = tab

# Batch files use CRLF
[*.{cmd,bat}]
end_of_line = crlf
